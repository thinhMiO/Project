@model Supermarket.Models.Customer

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a asp-area="Admin" asp-controller="AdminHome" asp-action="Index">Home</a></li>
                            <li class="active">Profile</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Profile Card</strong>
            </div>
            <div class="card-body">
                <div class="mx-auto d-block">
                    <img class="rounded-circle mx-auto d-block" src="~/Adminassets/images/Admin.jpg" style="width:150px" alt="Card image cap">
                    <h5 class="text-sm-center mt-2 mb-1">@Model.CustomerName</h5>
                    <div class="location text-sm-center"><i class="fa fa-map-marker"></i> @Model.Address</div>
                </div>
                <hr>
                <div class="card-text text-sm-center">
                    <div class="card-body">
                        <p class="card-text">Phone: @Model.Phone</p>
                        <p class="card-text">Email: @Model.Email</p>
                    </div>
                    <a href="#"><i class="fa fa-facebook pr-1"></i></a>
                    <a href="#"><i class="fa fa-twitter pr-1"></i></a>
                    <a href="#"><i class="fa fa-linkedin pr-1"></i></a>
                    <a href="#"><i class="fa fa-pinterest pr-1"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>