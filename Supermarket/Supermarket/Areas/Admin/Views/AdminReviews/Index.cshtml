@model IEnumerable<Supermarket.Areas.Admin.Data.ReviewVM>

@{
    ViewData["Title"] = "List Comments";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a asp-area="Admin" asp-controller="AdminHome" asp-action="Index">Home</a></li>
                            <li class="active">List Comments</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Comments</strong>
        </div>

        <div class="card-body">
            <table style="text-align:center" class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Product</th>
                        <th scope="col">Description</th>
                        <th scope="col">Create Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.CustomerName</th>
                                <td>@item.ProductName</td>
                                <td style="text-align:left">@item.ShortContents</td>
                                <td>@item.CreateDate</td>
                                @{
                                    var status = (item.Status == true) ? "Active" : "Block";
                                }
                                <td>@status</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ReviewId" class="btn btn-primary">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ReviewId" class="btn btn-info">Details</a> |
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


